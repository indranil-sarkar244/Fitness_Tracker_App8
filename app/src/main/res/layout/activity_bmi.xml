<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    tools:context=".BmiActivity">

    <!-- Toolbar -->

    <!-- Input for Weight (kg) -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:title="BMI Calculator"
        android:titleTextColor="?attr/colorOnPrimary" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Weight (kg)"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        />

    <!-- Input for Height (cm) -->
    <EditText
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="Height (cm)"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:layout_marginTop="12dp" />

    <!-- Input for Age -->
    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:hint="Age (years)"
        android:inputType="number"
        android:maxLines="1"
        android:layout_marginTop="12dp" />

    <!-- Horizontal layout for buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- Calculate Button -->
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Calculate BMI" />

        <!-- Spacer -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <!-- Reset Button -->
        <Button
            android:id="@+id/button_reset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Reset" />
    </LinearLayout>

    <!-- TextView to show BMI result -->
    <TextView
        android:id="@+id/BMI_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your BMI result will appear here."
        android:textSize="18sp"
        android:textColor="#000000"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:background="#E0E0E0"
        android:minHeight="120dp" />

    <TextView
        android:id="@+id/BMItextViewDescrip"
        android:layout_width="377dp"
        android:layout_height="247dp"
        android:paddingTop="25dp"
        android:text="BMI"
        android:textAlignment="center"
        android:textColor="#AD49E1"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <!-- Title for BMI History Chart -->
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="BMI History"-->
<!--        android:textSize="20sp"-->
<!--        android:textStyle="bold"-->
<!--        android:layout_marginTop="32dp"-->
<!--        android:paddingBottom="8dp" />-->

    <!-- Placeholder for BarChart (from MPAndroidChart library) -->


</LinearLayout>
